<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/liner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:layout_centerVertical="true"
            android:animateLayoutChanges="true"
            android:padding="2dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="2dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="83dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:padding="5dp"
                android:src="@drawable/carro_de_compras_rapido"/>

            <TextView
                android:layout_width="278dp"
                android:layout_height="83dp"
                android:fontFamily="@font/indie_flower"
                android:text="Catalogo de Productos"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="177dp"
                android:layout_height="279dp"
                android:layout_centerVertical="true"
                android:animateLayoutChanges="true"
                android:padding="2dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="2dp">

                <ImageView
                    android:layout_width="154dp"
                    android:layout_height="161dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/coronita" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="165dp"
                    android:fontFamily="@font/indie_flower"
                    android:text="Six-Pack Cerveza Coronita X355 ml "
                    android:textAlignment="viewStart"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="210dp"
                    android:fontFamily="@font/indie_flower"
                    android:text="$17.000 COP"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    tools:ignore="TextSizeCheck" />

            </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="177dp"
            android:layout_height="279dp"
            android:layout_centerVertical="true"
            android:layout_marginVertical="10dp"
            android:animateLayoutChanges="true"
            android:padding="2dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="2dp">

            <ImageView
                android:layout_width="154dp"
                android:layout_height="161dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:padding="5dp"
                app:srcCompat="@drawable/whisky" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="165dp"
                android:fontFamily="@font/indie_flower"
                android:text="Whisky Buchanans 18 Años X750 ml"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="210dp"
                android:fontFamily="@font/indie_flower"
                android:text="$390.000 COP"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="177dp"
            android:layout_height="279dp"
            android:translationY="-577dp"
            android:translationX="205dp"
            android:padding="2dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="2dp">

            <ImageView
                android:layout_width="154dp"
                android:layout_height="161dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:padding="5dp"
                app:srcCompat="@drawable/aguardiente" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="165dp"
                android:fontFamily="@font/indie_flower"
                android:text="Aguardiente Nectar Rojo X1000 ml"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="210dp"
                android:fontFamily="@font/indie_flower"
                android:text="$47.500 COP"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="177dp"
            android:layout_height="279dp"
            android:translationY="-567dp"
            android:translationX="205dp"
            android:padding="2dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="2dp">

            <ImageView
                android:layout_width="154dp"
                android:layout_height="161dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:padding="5dp"
                app:srcCompat="@drawable/ron" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="165dp"
                android:fontFamily="@font/indie_flower"
                android:text="Ron Viejo de Caldas 3 Años X750 ml"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="210dp"
                android:fontFamily="@font/indie_flower"
                android:text="$51.700 COP"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:visibility="gone">

        <include
            layout="@layout/shimmer_layout"
            tools:visibility="gone" />

    </com.facebook.shimmer.ShimmerFrameLayout>

</RelativeLayout>